---
// @ts-ignore
import { localizePath } from "astro-i18next";
import { t, changeLanguage } from "i18next";
import Button from "../../components/BlogButton.astro";
import WordpressPreview from "../../components/WordpressPreview.tsx";

changeLanguage("de");
---

<div class="posts">
  <WordpressPreview numberOfPosts={1} client:idle />
  <div class="space-right">
    <span class="link">
      <a href={localizePath("/BlogPage/")}>
        {t("blog.viewAll")}
        <span class="icon-wrapper">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1rem"
            height="1rem"
            viewBox="0 0 16 16"
          >
            <path
              fill="currentColor"
              d="M8.22 2.97a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.042-.018a.75.75 0 0 1-.018-1.042l2.97-2.97H3.75a.75.75 0 0 1 0-1.5h7.44L8.22 4.03a.75.75 0 0 1 0-1.06"
            ></path>
          </svg>
        </span>
      </a>
    </span>
  </div>
</div>

<style>
  .posts {
    display: flex;
    flex-direction: row;
    margin: 0.25rem 1rem;
    padding: 0.5rem;
    gap: 4rem;
  }
  .space-right {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: flex-end;
    margin: 0.75rem 1.5rem;
  }

  .link {
    display: inline-block;
    color: #b0b0b0;
    font-size: 14px;
    font-weight: 700;
    transition: color 0.3s ease;
  }

  .link a {
    display: inline-flex;
    align-items: center;
    color: inherit;
    text-decoration: none;
    position: relative;
    padding-right: 1.15rem;
  }

  .icon-wrapper {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    transition: transform 0.3s ease;
  }

  .link svg {
    transition: fill 0.3s ease;
  }

  .link:hover,
  .link:hover svg path {
    color: #fff;
  }

  .link:hover .icon-wrapper {
    transform: translate(0.25rem, -50%);
  }

  @media (max-width: 768px) {
    .posts {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
