---
const { href, label } = Astro.props;
---

<div class="space-right">
  <span class="link">
    <a href={href}>
      <span class="icon-wrapper">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1rem"
          height="1rem"
          viewBox="0 0 16 16"
        >
          <path
            fill="currentColor"
            d="M7.78 2.97a.75.75 0 0 0-1.06 0L2.47 7.22a.75.75 0 0 0 0 1.06l4.25 4.25a.75.75 0 0 0 1.042-.018a.75.75 0 0 0 .018-1.042L4.81 8.5h7.44a.75.75 0 0 0 0-1.5H4.81l2.97-2.97a.75.75 0 0 0 0-1.06"
          ></path>
        </svg>
      </span>
      {label}
    </a>
  </span>
</div>
<style>
  .space-right {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
  }

  .link {
    display: inline-block;
    color: #b0b0b0;
    font-size: 14px;
    font-weight: 700;
    transition: color 0.3s ease;
  }

  .link a {
    display: inline-flex;
    align-items: center;
    color: inherit;
    text-decoration: none;
    position: relative;
    padding-left: 1.15rem;
  }

  .icon-wrapper {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    transition: transform 0.3s ease;
  }

  .link svg {
    transition: fill 0.3s ease;
  }

  .link:hover,
  .link:hover svg path {
    color: #fff;
  }

  .link:hover .icon-wrapper {
    transform: translate(-0.25rem, -50%);
  }
</style>
