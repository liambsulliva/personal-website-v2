---
// @ts-ignore
// import { localizePath } from "astro-i18next";
// import { t } from "i18next";
import CarouselWithRefresh from "../components/gallery/CarouselWithRefresh.tsx";
import DiceIcon from "../components/DiceIcon.astro";
// import ArrowLink from "../components/ArrowLink.astro";
---

<div class="content">
  <DiceIcon />
  <CarouselWithRefresh client:visible />
</div>

<script>
  // Setup click handler for dice icon
  const diceButton = document.getElementById('dice-button');

  if (diceButton) {
    diceButton.addEventListener('click', () => {
      // Dispatch event for the React component to listen to
      window.dispatchEvent(new Event('dice-click'));
    });
  }
</script>

<style>
  :root {
    --card-title: #94b8f9;
  }
  .content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    list-style-type: none;
    width: 100%;
    margin: 1rem;
    padding: 0.5rem;
    gap: 3rem;
  }
</style>
