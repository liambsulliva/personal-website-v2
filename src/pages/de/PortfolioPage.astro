---
// @ts-ignore
import { localizePath } from "astro-i18next";
import Layout from "../../layouts/Layout.astro";
import BackLink from "../../components/BackLink.astro";
import FlickrFetcher from "../../components/FlickrFetcher.jsx";
import { t, changeLanguage } from "i18next";

changeLanguage("de");

const apiKey = import.meta.env.FLICKR_API_KEY;
const userId = import.meta.env.FLICKR_USER_ID;
---

<Layout title="Portfolio">
  <div class="content">
    <div class="btn-container">
      <BackLink label={t("misc.backBtn")} href={localizePath("/")} />
    </div>
    <FlickrFetcher {apiKey} {userId} lang={t("misc.lang")} client:load />
  </div>
</Layout>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
  }

  iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: left;
  }

  .btn-container {
    margin: 2rem;
  }
</style>
