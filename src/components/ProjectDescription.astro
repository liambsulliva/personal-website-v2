---
interface Props {
  projectRole: string[];
  team: string[];
  tools: string[];
  timeline: string[];
  demoLink?: string;
  githubLink?: string;
}

const { projectRole, team, tools, timeline, demoLink, githubLink }: Props =
  Astro.props;
---

<div class="project-description-container">
  <div
    class="mb-6 mt-6 grid w-full grid-cols-2 justify-between md:mt-2 md:grid-cols-4 lg:mx-24"
  >
    <div class="flex flex-col items-center text-center">
      <div>
        <h2 class="font-semibold text-white">Role</h2>
      </div>
      <ul class="list-none text-[#D0D0D0]">
        {projectRole.map((role) => <li>{role}</li>)}
      </ul>
    </div>
    <div class="flex flex-col items-center text-center">
      <div>
        <h2 class="font-semibold text-white">Team</h2>
      </div>
      <ul class="list-none text-[#D0D0D0]">
        {team.map((member) => <li>{member}</li>)}
      </ul>
    </div>
    <div class="flex flex-col items-center text-center">
      <div>
        <h2 class="font-semibold text-white">Tools</h2>
      </div>
      <ul class="list-none text-[#D0D0D0]">
        {tools.map((tool) => <li>{tool}</li>)}
      </ul>
    </div>
    <div class="flex flex-col items-center text-center">
      <div>
        <h2 class="font-semibold text-white">Timeline</h2>
      </div>
      <ul class="list-none text-[#D0D0D0]">
        {timeline.map((time) => <li>{time}</li>)}
      </ul>
    </div>
  </div>

  {
    (demoLink || githubLink) && (
      <div class="mb-12 flex justify-center gap-4">
        {githubLink && (
          <a
            href={githubLink}
            target="_blank"
            rel="noopener noreferrer"
            class="project-link"
            aria-label="View on GitHub"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="1.25rem"
              height="1.25rem"
              viewBox="0 0 24 24"
              class="inline-block"
            >
              <path
                fill="currentColor"
                d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
              />
            </svg>
            GitHub
          </a>
        )}
        {demoLink && (
          <a
            href={demoLink}
            target="_blank"
            rel="noopener noreferrer"
            class="project-link project-link-primary"
            aria-label="View Live Demo"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="1.25rem"
              height="1.25rem"
              viewBox="0 0 24 24"
              class="inline-block"
            >
              <path
                fill="currentColor"
                d="M14 3v2h3.59l-9.83 9.83l1.41 1.41L19 6.41V10h2V3m-2 16H5V5h7V3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7h-2z"
              />
            </svg>
            Live Demo
          </a>
        )}
      </div>
    )
  }
</div>

<style>
  .project-description-container {
    width: 100%;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    background-color: var(--card-color);
    color: #e0e0e0;
    border: 1px solid #333;
  }

  .project-link:hover {
    background-color: #1a1a1a;
    border-color: #444;
    transform: translateY(-1px);
  }

  .project-link-primary {
    background-color: #0066ff;
    border-color: #0066ff;
    color: white;
  }

  .project-link-primary:hover {
    background-color: #0052cc;
    border-color: #0052cc;
  }
</style>
