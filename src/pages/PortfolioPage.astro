---
import Layout from '../layouts/Layout.astro';
import Button from '../components/BackButton.astro';
import FlickrFetcher from '../components/FlickrFetcher.jsx';
---

<Layout title='Portfolio'>
    <div class="content">
        <div class="btn-container">
            <Button label="Back" href="/"/>
        </div>
        <FlickrFetcher client:load/>
    </div>
</Layout>

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    .content {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: left;
    }

    .btn-container {
        margin: 2rem;
    }
</style>