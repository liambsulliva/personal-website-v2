---
interface Props {
  projectRole: string[];
  team: string[];
  tools: string[];
  timeline: string[];
}

const { projectRole, team, tools, timeline }: Props = Astro.props;
---

<div
  class="m-8 mt-12 grid grid-cols-1 justify-between gap-4 sm:grid-cols-2 lg:grid-cols-4"
>
  <div class="flex flex-col items-center text-center">
    <h2 class="font-semibold text-white">Project Role</h2>
    <ul class="list-none text-[#D0D0D0]">
      {projectRole.map((role) => <li>{role}</li>)}
    </ul>
  </div>
  <div class="flex flex-col items-center text-center">
    <h2 class="font-semibold text-white">Team</h2>
    <ul class="list-none text-[#D0D0D0]">
      {team.map((member) => <li>{member}</li>)}
    </ul>
  </div>
  <div class="flex flex-col items-center text-center">
    <h2 class="font-semibold text-white">Tools</h2>
    <ul class="list-none text-[#D0D0D0]">
      {tools.map((tool) => <li>{tool}</li>)}
    </ul>
  </div>
  <div class="flex flex-col items-center text-center">
    <h2 class="font-semibold text-white">Timeline</h2>
    <ul class="list-none text-[#D0D0D0]">
      {timeline.map((time) => <li>{time}</li>)}
    </ul>
  </div>
</div>
