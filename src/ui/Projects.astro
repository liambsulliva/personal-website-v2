---
import Card from "../components/Card.astro";
import {
  herlthroughtheyears,
  weatherapp,
  pokedraft,
  recipeapp,
} from "../utils/images";
import {
  NextjsIcon,
  MongoDBIcon,
  SvelteIcon,
  TypeScriptIcon,
  AstroIcon,
  ReactIcon,
  NodejsIcon,
  TailwindIcon,
} from "../utils/icons";
---

<div class="content">
  <div class="grid">
    <Card
      title="Kingdra Teambuilder"
      description="A full-stack Pokemon Teambuilder app designed for both casual and competitive players, complete with an authentication system and cloud sync."
      img={pokedraft}
      banner1icon={NextjsIcon}
      banner1text={"Next.js"}
      banner2icon={MongoDBIcon}
      banner2text={"MongoDB"}
      viewBtn="https://github.com/liambsulliva/pokemon-teambuilder"
      demoBtn="/kingdra-app"
      projectLink="/kingdra-app"
      externalLink={false}
    />
    <Card
      title="HERL - Through The Years"
      description="A 3D interactive scrapbook documenting Human Engineering Research Labs' 30 year history with the Department of Veteran's Affairs."
      banner1icon={SvelteIcon}
      banner1text={"Svelte"}
      banner2icon={TypeScriptIcon}
      banner2text={"TypeScript"}
      img={herlthroughtheyears}
      viewBtn="https://github.com/liambsulliva/HERL-Digital-Narrative"
      demoBtn="/herl-app"
      projectLink="/herl-app"
      externalLink={false}
    />
    <Card
      title="Recipe App"
      description="A recipe site full of classic Sullivan family recipes. The landing page is rendered dynamically, with the subpages statically generated from markdown."
      banner1icon={AstroIcon}
      banner1text={"Astro"}
      banner2icon={ReactIcon}
      banner2text={"React"}
      img={recipeapp}
      viewBtn="https://github.com/liambsulliva/recipe-website"
      demoBtn="/recipe-app"
      projectLink="/recipe-app"
      externalLink={false}
    />
    <Card
      title="Weather GPT"
      description="A OpenWeather API sourced weather app that uses GPT-3.5 to summarize weather data on a backend server. Generates HTML dynamically through EJS."
      img={weatherapp}
      banner1icon={NodejsIcon}
      banner1text={"Node.js"}
      banner2icon={TailwindIcon}
      banner2text={"Tailwind"}
      viewBtn="https://github.com/liambsulliva/weather-app"
      demoBtn="/weather-gpt"
      projectLink="/weather-gpt"
      externalLink={false}
    />
  </div>
</div>

<style>
  .content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    list-style-type: none;
    width: 100%;
    gap: 2.5rem;
  }
  .grid {
    max-width: 1200px;
    margin: 0 auto;
    gap: 2rem;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
  @media (max-width: 850px) {
    .grid {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>
