---
interface ButtonProps {
  href: string;
  label: string;
  icon: string;
}

const { href, label, icon } = Astro.props;
---

<a href={href} class="button">
  <p>{label}</p>
  <raw set:html={icon} class="logo" />
</a>
<style>
  :root {
    --button-color: #fff;
    --new-button-color: #282935;
    --fill: #fff;
  }

  .button {
    margin: auto;
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    position: relative;
    padding: 0.75rem 2rem;
    background-color: var(--new-button-color);
    border-radius: 25px;
    transition: all 0.3s;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.25);
  }

  .button p {
    color: var(--fill);
    transition: all 0.3s;
  }

  .button .logo {
    position: absolute;
    top: auto;
    right: 12px;
    opacity: 0;
    fill: var(--fill);
    transition: all 0.3s;
  }

  .button:hover {
    border-color: var(--new-button-color);
  }

  .button:hover p {
    transform: translateX(-15px);
  }

  .button:hover .logo {
    opacity: 1;
  }

  .button:active {
    transform: scale(0.95);
  }
</style>
