---
// @ts-ignore
import { localizePath } from "astro-i18next";
import { t } from "i18next";
import Carousel from "../components/gallery/FlickrCarousel.tsx";
import ArrowLink from "../components/ArrowLink.astro";
const apiKey = import.meta.env.FLICKR_API_KEY;
const userId = import.meta.env.FLICKR_USER_ID;
---

<div class="content">
  <Carousel {apiKey} {userId} client:visible />
  <ArrowLink
    href={localizePath("/photography/")}
    label={t("photography.viewAll")}
  />
</div>

<style>
  :root {
    --card-title: #94b8f9;
  }
  .content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    list-style-type: none;
    width: 100%;
    margin: 1rem;
    padding: 1rem 0.5rem;
    gap: 3rem;
  }
  @media screen and (max-width: 768px) {
    .content {
      padding: 1rem 1.25rem;
    }
  }
</style>
