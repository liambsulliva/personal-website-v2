---
// @ts-ignore
import { Trans } from "astro-i18next/components";
// @ts-ignore
import { localizePath } from "astro-i18next";
import { Image } from "astro:assets";
import Mockup from "../images/mockup.png";
---

<ul class="main-list">
  <a
    href={localizePath("/KingdraCaseStudy")}
    aria-label="Health and Safety Experts GmbH"
    class="group flex cursor-pointer items-stretch gap-6"
  >
    <div
      class="relative flex h-full w-full flex-col overflow-hidden rounded-xl border border-[#333333] bg-[#151515] group-hover:bg-[#181818]"
    >
      <div class="relative w-full">
        <div
          id="shimmer"
          class="absolute inset-0 animate-pulse bg-gradient-to-r from-[#303030] via-[#383838] to-[#303030]"
        >
        </div>
        <Image
          src={Mockup}
          alt="UX Banner"
          class="relative h-full w-full object-cover opacity-0 transition-opacity duration-300"
          onload="this.style.opacity='1'; document.getElementById('shimmer').style.display='none';"
        />
      </div>
      <div class="main-list-header p-8">
        <div class="icon-set">
          <Trans i18nKey="ux.content1.title">
            <h3 class="text-2xl font-bold tracking-tight text-white">
              The Journey to Mobile
            </h3>
          </Trans>
        </div>

        <Trans i18nKey="ux.content1.description">
          <p class="text-[#d0d0d0]">A Case Study</p>
        </Trans>
      </div>
    </div>
  </a>
</ul>

<style>
  .main-list-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  @media (max-width: 500px) {
    .main-list-header {
      flex-direction: column;
      align-items: start;
    }
  }

  .icon-set {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .sub-list-item {
    list-style-type: circle;
    margin: 0.5rem 2rem;
  }

  a {
    text-decoration: none;
    color: inherit;
    display: block;
    position: relative;
  }

  a::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }
</style>
