---
// @ts-ignore
import { localizePath } from "astro-i18next";
import { t, changeLanguage } from "i18next";
import WordpressPreview from "../../components/WordpressPreview.tsx";
import ArrowLink from "../../components/ArrowLink.astro";

changeLanguage("de");
---

<div class="posts">
  <div class="mb-8 text-left">
    <h1 class="mb-2 text-2xl font-bold">Berlin</h1>
    <div class="h-[1px] w-16 bg-[#333]"></div>
  </div>
  <WordpressPreview numberOfPosts={1} client:idle />
  <ArrowLink href={localizePath("/BlogPage/")} label={t("blog.viewAll")} />
</div>

<style>
  .posts {
    display: flex;
    flex-direction: row;
    margin: 0.25rem 1rem;
    padding: 0.5rem;
    gap: 4rem;
  }

  @media (max-width: 768px) {
    .posts {
      flex-direction: column;
      gap: 1rem;
      padding: 0.25rem;
    }
  }
</style>
