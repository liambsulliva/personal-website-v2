---
import Layout from "../../layouts/Layout.astro";
import BackLink from "../../components/BackLink.astro";
import WordpressFetcher from "../../components/editorial/WordpressFetcher.tsx";
import LocalFetcher from "../../components/editorial/LocalFetcher.tsx";
import { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";
// @ts-ignore
import { localizePath } from "astro-i18next";

changeLanguage("de");
---

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    overflow: auto;
  }

  iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: left;
    margin: 2rem;
  }
</style>

<Layout title="Archive">
  <div class="content">
    <BackLink label={t("misc.backBtn")} href={localizePath("/")} />
    <Trans i18nKey="archive.header">
      <h1 class="my-20 text-5xl font-bold">Archive</h1>
    </Trans>
    <div class="mx-auto mb-16 flex flex-col">
      <Trans i18nKey="archive.layouts">
        <p class="text-md mb-2 font-bold uppercase">Layouts</p>
      </Trans>
      <LocalFetcher
        lang={t("misc.lang") as string}
        category={"layouts"}
        client:load
      />
    </div>
    <div class="mx-auto mb-16 flex flex-col">
      <Trans i18nKey="archive.graphicDesign">
        <p class="text-md mb-2 font-bold uppercase">Graphic Design</p>
      </Trans>
      <LocalFetcher
        lang={t("misc.lang") as string}
        category={"graphic-design"}
        client:load
      />
    </div>
    <div class="mx-auto flex flex-col pb-28">
      <Trans i18nKey="archive.blog">
        <p class="text-md mb-2 font-bold uppercase">Blog</p>
      </Trans>
      <WordpressFetcher lang={t("misc.lang") as string} client:load />
    </div>
  </div>
</Layout>
