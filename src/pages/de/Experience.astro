---
// @ts-ignore
import { localizePath } from "astro-i18next";
import { Trans } from "astro-i18next/components";
import { t, changeLanguage } from "i18next";
import Button from "../../components/ForwardButton.astro";
import BlogButton from "../../components/BlogButton.astro";

changeLanguage("de");
---

<div class="title">
  <Trans i18nKey="experience.header"><h2>Experience</h2></Trans>
</div>
<div>
  <BlogButton />
</div>

<style>
  .main-list {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    list-style-type: none;
    width: 100%;
    margin: 1rem;
    padding: 1rem;
    gap: 3rem;
  }
  .main-list-item {
    align-items: center;
    padding: 1.5rem;
    border: 3px solid #454545;
    border-radius: 15px;
  }

  .main-list-item h3 {
    font-weight: bold;
  }

  .main-list-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  @media (max-width: 500px) {
    .main-list-header {
      flex-direction: column;
      align-items: start;
    }
  }

  .main-list-header p {
    text-align: right;
  }

  .sub-list-item {
    list-style-type: circle;
    margin: 0.5rem 2rem;
  }
</style>
